<h1>List of Signed Students</h1>

<table>
	<tr>
		<th>Student ID</th>
		<th>Name</th>
		<th>Surname</th>
		<th>Signed</th>
	</tr>
	@if (Model != null)
	{
		@foreach (var item in Model)
		{
			@if(item.Signed == true)
			{
				<tr>
					<td>@item.StudentId</td>
					<td>@item.Name</td>
					<td>@item.Surname</td>
					<td>@item.Signed</td>
				</tr>
			}
		}
	}
</table>