@model List<StudentAllList>

@{ 
    int AttendanceNumber = 0;
}

@if (Model != null)
{
	foreach (var item in Model)
	{
		if(item.Signed == true)
		{
		    AttendanceNumber++;
		}
	}
}

<h4>Number of attendants: @AttendanceNumber</h4>

